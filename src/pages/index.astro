      }
    }

    .c1 {
      display: inline-block;
    }
    .c2 {
      display: inline-block;
    }
    .c3 {
      display: inline-block;
    }
    .c4 {
      display: inline-block;
    }
    h2 {
      font-size: 2rem;
      margin-top: 1%;
    }
    h2 .type {
      font-size: 1.5rem;
      overflow: hidden;
      border-right: 0.15em solid var(--site-green);
      white-space: nowrap;
      width: 0;
      animation: typing 1s steps(25, end) forwards;
      margin-left: 16px;
    }
    h2 .type2 {
      font-size: 1.5rem;
      overflow: hidden;
      border-right: 0.15em solid var(--site-green);
      white-space: nowrap;
      width: 0;
      animation: typing 1s steps(25, end) forwards;
      animation-delay: 1s;
      margin-left: 16px;
    }
    h2 .type3 {
      font-size: 1.5rem;
      overflow: hidden;
      border-right: 0.15em solid var(--site-green);
      white-space: nowrap;
      width: 0;
      animation: typing 1s steps(25, end) forwards;
      animation-delay: 2s;
      margin-left: 16px;
    }
    h2 .type4 {
      font-size: 1.5rem;
      overflow: hidden;
      border-right: 0.15em solid var(--site-green);
      white-space: nowrap;
      width: 0;
      animation: typing 1s steps(25, end) forwards;
      animation-delay: 3s;
      margin-left: 16px;
    }
    @keyframes typing {
      from {
        width: 0;
      }
      to {
        width: 100%;
      }
    }
    @keyframes blink {
      from {
        border-color: transparent;
      }
      to {
        border-color: var(--site-green);
      }
    }
  </style>
</BaseLayout>
