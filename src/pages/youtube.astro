---
import BaseLayout from "../layouts/BaseLayout.astro";
import YouTubeFeed from "../components/YouTubeFeed.astro";

const pageTitle = "YouTube Channel - Programming Tutorials by Kevin Cunningham";
const pageDescription = "Watch my latest programming tutorials, tech talks, and educational content covering JavaScript, React, Vue.js, Node.js, TypeScript, and modern web development practices.";
---

<BaseLayout 
  pageTitle={pageTitle}
  pageDescription={pageDescription}
>
  <div class="youtube-page">
    <header class="page-header">
      <h1>üì∫ YouTube Channel</h1>
      <p class="lead">
        Welcome to my YouTube channel! I create educational content about web development, 
        programming languages, and developer tools. Subscribe to stay updated with the latest tutorials.
      </p>
      <div class="channel-stats">
        <a 
          href="https://www.youtube.com/channel/UCtzNXx0YjJFvAuAPL9ZjQOw?sub_confirmation=1" 
          target="_blank" 
          rel="noopener noreferrer"
          class="subscribe-btn"
        >
          üîî Subscribe to My Channel
        </a>
      </div>
    </header>

    <YouTubeFeed 
      maxVideos={6}
      showTitle={false}
      showVideoTitles={true}
      showDescription={true}
      gridCols={2}
      channelId="UCtzNXx0YjJFvAuAPL9ZjQOw"
    />

    <section class="content-topics">
      <h2>What You'll Learn</h2>
      <div class="topics-grid">
        <div class="topic-card">
          <h3>üü® JavaScript</h3>
          <p>Modern JavaScript, ES6+, async programming, and core concepts</p>
        </div>
        <div class="topic-card">
          <h3>‚öõÔ∏è React</h3>
          <p>Components, hooks, state management, and React best practices</p>
        </div>
        <div class="topic-card">
          <h3>üíö Vue.js</h3>
          <p>Vue fundamentals, composition API, and building reactive applications</p>
        </div>
        <div class="topic-card">
          <h3>üü¢ Node.js</h3>
          <p>Server-side JavaScript, APIs, databases, and backend development</p>
        </div>
        <div class="topic-card">
          <h3>üî∑ TypeScript</h3>
          <p>Type safety, interfaces, generics, and advanced TypeScript patterns</p>
        </div>
        <div class="topic-card">
          <h3>üé® CSS & Design</h3>
          <p>Modern CSS, responsive design, animations, and UI/UX principles</p>
        </div>
      </div>
    </section>

    <section class="community-section">
      <h2>Join the Community</h2>
      <p>
        Have questions about the tutorials? Want to suggest a topic? 
        Connect with me and other learners:
      </p>
      <div class="community-links">
        <a href="https://bsky.app/profile/dolearning.dev" target="_blank" rel="noopener noreferrer">
          üíô Bluesky
        </a>
        <a href="https://hachyderm.io/@dolearning/" target="_blank" rel="noopener noreferrer">
          üêò Mastodon
        </a>
        <a href="https://github.com/doingandlearning" target="_blank" rel="noopener noreferrer">
          üêô GitHub
        </a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .youtube-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .page-header {
    text-align: center;
    margin: 2rem 0 3rem 0;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--heading-color, #333);
  }

  .lead {
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--text-color, #666);
    max-width: 800px;
    margin: 0 auto 2rem auto;
  }

  .channel-stats {
    margin: 2rem 0;
  }

  .subscribe-btn {
    display: inline-block;
    background: #ff0000;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.2s ease, transform 0.2s ease;
  }

  .subscribe-btn:hover {
    background: #cc0000;
    transform: translateY(-1px);
  }

  .content-topics {
    margin: 4rem 0;
  }

  .content-topics h2 {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--heading-color, #333);
  }

  .topics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .topic-card {
    background: var(--card-bg, #fff);
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .topic-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .topic-card h3 {
    margin-bottom: 0.5rem;
    color: var(--heading-color, #333);
  }

  .topic-card p {
    color: var(--text-color, #666);
    line-height: 1.5;
    margin: 0;
  }

  .community-section {
    background: var(--card-bg, #f8f9fa);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    margin: 3rem 0;
  }

  .community-section h2 {
    margin-bottom: 1rem;
    color: var(--heading-color, #333);
  }

  .community-section p {
    color: var(--text-color, #666);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .community-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .community-links a {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--site-orange, #ff6b35);
    color: white;
    text-decoration: none;
    border-radius: 20px;
    transition: background-color 0.2s ease, transform 0.2s ease;
  }

  .community-links a:hover {
    background: var(--text-color, #333);
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .lead {
      font-size: 1.1rem;
    }

    .topics-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .community-links {
      flex-direction: column;
      align-items: center;
    }

    .community-links a {
      width: 200px;
      text-align: center;
    }
  }
</style>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "YouTube Channel - Programming Tutorials by Kevin Cunningham",
  "description": "Watch my latest programming tutorials, tech talks, and educational content covering JavaScript, React, Vue.js, Node.js, TypeScript, and modern web development practices.",
  "author": {
    "@type": "Person",
    "name": "Kevin Cunningham",
    "url": "https://kevincunningham.co.uk",
    "sameAs": [
      "https://www.youtube.com/channel/UCtzNXx0YjJFvAuAPL9ZjQOw",
      "https://github.com/doingandlearning",
      "https://bsky.app/profile/dolearning.dev"
    ]
  },
  "mainEntity": {
    "@type": "VideoObject",
    "name": "Programming Tutorials by Kevin Cunningham",
    "description": "Educational programming content covering web development, JavaScript, React, Vue.js, and more",
    "thumbnailUrl": "https://kevincunningham.co.uk/favicon.ico",
    "uploadDate": "2024-01-01",
    "publisher": {
      "@type": "Person",
      "name": "Kevin Cunningham"
    }
  }
}
</script>